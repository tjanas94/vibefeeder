# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = 100

# Go and Templ files
[*.{go,templ}]
indent_style = tab
indent_size = 4

# JavaScript, TypeScript, JSON, CSS, YAML, TOML, Markdown
[*.{js,ts,json,css,yml,yaml,toml,md}]
indent_style = space
indent_size = 2

# Markdown - don't trim trailing whitespace (used for line breaks)
[*.md]
trim_trailing_whitespace = false
